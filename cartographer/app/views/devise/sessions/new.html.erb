<div class="flex flex-col items-center font-righteous"> 
  <div class="flex flex-row mt-10 w-full justify-center items-end">
    <h2 class="font-bold sm:text-8xl text-6xl ">Log In</h2>
  </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-2">
        <%= f.email_field :email, autofocus: true, placeholder: "email", class:"rounded-lg text-lg mt-10" %>
      </div>

      <div class="mt-2">
        <%= f.password_field :password, placeholder: "password", class:"rounded-lg text-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex justify-center items-center font-raleway mt-2 gap-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions btn-green mt-2 md:mr-20">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

     <div class="flex w-4/5 absolute bottom-10 justify-center">
      <%= render "devise/shared/links" %>
    </div>
</div>